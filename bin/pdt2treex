#!/bin/bash
file=$1
scen=$(mktemp treex-XXXXXXXX.scen)

function cleanup() {
    rm -rf "$scen"
}
trap cleanup EXIT

cat <<EOF > "$scen"
# Temporary scenario to convert $file from PDT to Treex.
Read::PDT schema_dir=/home/stepanek/links/work/umr/data/stepanek language=cs from=$file
Write::Treex
EOF

treex "$scen"
